{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts"
  ]
}
